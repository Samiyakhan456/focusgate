{
  "manifest_version": 3,
  "name": "FocusGate â€” Instagram Blocker",
  "version": "2.0",
  "description": "Blocks Instagram until all your tasks are complete.",

  "permissions": [
    "tabs",
    "webNavigation"
  ],

  "host_permissions": [
    "https://www.instagram.com/*",
    "https://instagram.com/*",
    "http://localhost:8000/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "FocusGate"
  },

  "icons": {
    "16":  "icons/icon16.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
